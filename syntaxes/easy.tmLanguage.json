{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Easy",
    "patterns": [
        {
            "name": "keyword.control.easy",
            "match": "\\b(PROGRAM|END|EXTERNAL|PROCEDURE|SET|FUNCTION|TYPE|IS|ARRAY|OF|STRUCTURE|FIELD|DECLARE|NAME|BEGIN|FOR|DO|BY|TO|WHILE|IF|THEN|ELSE|FI|CALL|RETURN|EXIT|SELECT|CASE|OTHERWISE|REPEAT|REPENT|NPUT|OUTPUT|INTEGER|REAL|BOOLEAN|STRING|MOD|XOR|NOT)\\b"
        },
        {
            "name": "string.quoted.double.easy",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.easy",
                    "match": "\\\\."
                }
            ]
        },
        {
            "name": "comment.line.double-slash.easy",
            "match": "//.*$"
        },
        {
            "name": "comment.block.easy",
            "begin": "/\\*",
            "end": "\\*/"
        },
        {
            "name": "variable.other.easy",
            "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        },
        {
            "name": "variable.parameter.easy",
            "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
        },
        {
            "name": "constant.numeric.easy",
            "match": "\\b[0-9]+\\b"
        }
    ],
    "repository": {},
    "scopeName": "source.easy"
}
